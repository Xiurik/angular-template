/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@imgs/*": ["./src/assets/imgs/*"],
      "@environment": ["./src/environments/environment.ts"],
      // Core
      "@api/*": ["./src/app/core/api/*"],
      "@auth/*": ["./src/app/core/auth/*"],
      "@guards/*": ["./src/app/core/guards/*"],
      "@interceptors/*": ["./src/app/core/interceptors/*"],
      "@models-core/*": ["./src/app/core/models/*"],
      // Data
      "@models-data/*": ["./src/app/data/models/*"],
      "@services/*": ["./src/app/data/services/*"],
      "@shared-data/*": ["./src/app/data/shared/*"],
      // Layout
      "@components/*": ["./src/app/layout/components/*"],
      "@directives/*": ["./src/app/layout/directives/*"],
      "@pages/*": ["./src/app/layout/pages/*"],
      "@pipes/*": ["./src/app/layout/pipes/*"],
      "@shared-layout/*": ["./src/app/layout/shared/*"]
    }
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"]
}
